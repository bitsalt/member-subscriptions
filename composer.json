{
    "name": "bitsalt/member-subscriptions",
    "description": "Manage subscriptions of users based on WP user info, but staying out of the WP ecosystem.",
    "keywords": [
        "bitsalt",
        "member-subscriptions"
    ],
    "homepage": "https://github.com/bitsalt/member-subscriptions",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeff Moser",
            "email": "jeff@bitsalt.com",
            "homepage": "https://bitsalt.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "doctrine/orm": "^v2.7.3",
        "symfony/yaml": "2.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Bitsalt\\Membership\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitsalt\\Membership\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
